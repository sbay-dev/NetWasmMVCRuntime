@{
    ViewData["Title"] = "Chat";
}

<div class="chat-page">
    <h1>SignalR Chat</h1>
    <p class="text-muted">Real-time messaging powered by SignalR running in WebAssembly</p>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <span>Messages</span>
                    <span id="chat-status" class="small"><span class="text-secondary">Disconnected</span></span>
                </div>
                <div class="card-body p-0">
                    <ul id="chat-messages" class="list-group list-group-flush chat-messages-list">
                    </ul>
                </div>
                <div class="card-footer">
                    <div class="input-group">
                        <input type="text" id="chat-user" class="form-control" placeholder="Your name" style="max-width:150px;" value="User" />
                        <input type="text" id="chat-message" class="form-control" placeholder="Type a message..." disabled />
                        <button id="chat-send" class="btn btn-primary" disabled>Send</button>
                    </div>
                </div>
            </div>

            <div class="mt-3">
                <button id="chat-connect" class="btn btn-success btn-sm">Connect</button>
                <button id="chat-disconnect" class="btn btn-outline-danger btn-sm" disabled>Disconnect</button>
                <a class="btn btn-outline-secondary btn-sm ms-2" asp-controller="Home" asp-action="Index">Back to Home</a>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">Hub Info</div>
                <div class="card-body small">
                    <p><strong>Hub:</strong> ChatHub</p>
                    <p><strong>Methods:</strong></p>
                    <ul class="mb-0">
                        <li><code>SendMessage(user, message)</code></li>
                        <li><code>JoinGroup(groupName)</code></li>
                        <li><code>LeaveGroup(groupName)</code></li>
                        <li><code>SendToGroup(group, user, msg)</code></li>
                    </ul>
                    <hr />
                    <p><strong>Client Events:</strong></p>
                    <ul class="mb-0">
                        <li><code>ReceiveMessage</code></li>
                        <li><code>SystemMessage</code></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .chat-page { padding: 20px; }
    .chat-page h1 { color: #667eea; }
    .chat-messages-list {
        height: 350px;
        overflow-y: auto;
    }
    .chat-messages-list .list-group-item {
        padding: 8px 12px;
        font-size: 0.9rem;
    }
</style>
