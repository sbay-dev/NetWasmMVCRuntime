<script>
    // Live Cepha status check
    (async () => {
        const dot = document.getElementById('cepha-dot');
        const text = document.getElementById('cepha-status-text');
        if (!dot || !text) return;

        if (window.CephaClient && window.CephaClient.connected) {
            dot.className = 'c-status-dot online';
            text.textContent = 'âœ… Connected to Cepha Server â€” ' + window.CephaClient.serverUrl;
        } else {
            try {
                const urls = [
                    `${window.location.protocol}//${window.location.hostname}:3000`,
                    'http://localhost:3000'
                ];
                let found = false;
                for (const url of urls) {
                    try {
                        const res = await fetch(`${url}/_cepha/info`, { signal: AbortSignal.timeout(2000) });
                        if (res.ok) {
                            const info = await res.json();
                            dot.className = 'c-status-dot online';
                            text.textContent = `âœ… Connected â€” ${info.routeCount} routes, ${info.hubCount} hubs`;
                            found = true;
                            break;
                        }
                    } catch {}
                }
                if (!found) {
                    dot.className = 'c-status-dot offline';
                    text.textContent = 'ğŸ“´ Offline â€” Running locally without a server';
                }
            } catch {
                dot.className = 'c-status-dot offline';
                text.textContent = 'ğŸ“´ Offline';
            }
        }
    })();

    // Smooth scroll for anchor links
    document.querySelectorAll('.c-btn[href^="#"]').forEach(a => {
        a.addEventListener('click', e => {
            e.preventDefault();
            const target = document.querySelector(a.getAttribute('href'));
            if (target) target.scrollIntoView({ behavior: 'smooth', block: 'start' });
        });
    });
</script>
